<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3">
            <div class="row">
                Group Name: <input type="text" name="groupname" /> <input type="button" value="Add" onclick="newGroup();" />
            </div>
            <div class="row">
                <ul name="groupbox"></ul>
            </div>
            </div>
            <div class="col-sm-9">
                <div>
                    Name: <input type="text" name="name" /><br />
                    Message: <input type="text" name="message" /><br />
                    <input type="button" value="Send" onclick="newMessage();" />
                    <input type="button" value="Get Message" onclick="getAllMessage();" />
                </div>
                <div>
                    <ul name="chatbox"></ul>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.3.0.min.js"></script>
